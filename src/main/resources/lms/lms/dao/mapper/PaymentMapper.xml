<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="lms.lms.payment.dao.mapper.PaymentMapper">
	<resultMap  id="paymentMap" type="lms.lms.common.domain.Payment">
		<result property="paymentNo" column="payment_no"/>	
		<result property="userNo" column="user_no"/>	
		<result property="seatNumber" column="seat_number"></result>	
		<result property="startingDate" column="starting_date"></result>	
		<result property="endingDate" column="ending_date"></result>	
		<result property="paymentCost" column="payment_cost"></result>	
		<result property="paymentPlan" column="payment_plan"></result>	
	</resultMap>
	<select id="paymentList" parameterType="lms.lms.common.domain.Payment" resultMap="paymentMap">
		SELECT *
		FROM payment ORDER BY payment_no
	</select>	
</mapper>